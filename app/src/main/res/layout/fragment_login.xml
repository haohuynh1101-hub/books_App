<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.login"
    android:id="@+id/layoutFragmentLogin"
    android:gravity="center"
    >

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_login"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="@color/primary_600"
        android:gravity="center"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:hint="Số điện thoại"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusTopStart="24dp"
        android:layout_marginTop="16dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/call_calling"
            android:inputType="text"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:hint="Mật khẩu"
        android:layout_gravity="center"
        android:gravity="center"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxCornerRadiusBottomEnd="24dp"
        app:boxCornerRadiusBottomStart="24dp"
        app:boxCornerRadiusTopEnd="24dp"
        app:boxCornerRadiusTopStart="24dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/eye_password"
        app:passwordToggleTint="@color/primary_400"
        android:layout_marginVertical="16dp"

        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="8dp"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="end"
        >
        <TextView
            android:id="@+id/txtForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="Quên mật khẩu"
            android:background="@drawable/custom_border_text"
            android:layout_gravity="center"
            android:textColor="@color/primary_600"
            android:textSize="16sp"
            android:clickable="true"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:text="Đăng nhập"
        android:backgroundTint="@color/primary_600"
        android:background="@drawable/custome_button"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:textSize="16dp"
        android:layout_marginBottom="16dp"
        android:elevation="16dp"
        />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hoặc"
            android:textColor="@color/gray_400"
            android:textSize="16dp"
            />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="Đăng nhập với Google"
        android:textColor="#000"
        android:layout_gravity="center"
        android:backgroundTint="#fff"
        app:cornerRadius="24dp"
        android:drawableLeft="@drawable/logo_google"
        android:elevation="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bạn chưa có tài khoản?"
            android:textColor="#000"
            android:textSize="16dp"
            />

        <TextView
            android:id="@+id/txtSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:textColor="@color/primary_600"
            android:textSize="20sp"
            android:layout_marginLeft="8dp"
            android:clickable="true"
            />
    </LinearLayout>
</LinearLayout>